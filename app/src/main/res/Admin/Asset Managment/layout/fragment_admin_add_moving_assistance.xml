<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_car_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Admin.MovingServices.AdminAddMovingAssistance"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moving Team Information"
                android:textAlignment="center"
                android:textSize="24sp" />


            <EditText
                android:id="@+id/numberOfMovers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Number of Movers"
                android:inputType="numberSigned" />


            <EditText
                android:id="@+id/hourlySetRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Price per Hour"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Form Preview"
                android:textAlignment="center"
                android:textSize="24sp" />



            <Button
                android:id="@+id/confirmAndAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm and Add" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>